{
  "compilerOptions": {
    "outDir": "./dist",
    // "baseUrl": "./src",
    // "rootDir": "./src",
    "target": "es5",
    "lib": ["DOM", "ES2020"],
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "module": "ESNext",
    "sourceMap": true,
    "removeComments": true,
    "locale": "ru",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    // "esModuleInterop": true,
    // "useUnknownInCatchVariables": false, // можно включить когда ошибки будут экземплярами класса Error
    // "noEmitOnError": true,
    // "skipLibCheck": true,
    // "forceConsistentCasingInFileNames": true,
    // "importsNotUsedAsValues": "error",
    // "noImplicitOverride": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["/node_modules/", "**/node_modules", "./dist/**/*", "**/.*/"]
}
