{
  "compilerOptions": {
		"outDir": "./dist/",
    // "baseUrl": "./src",
    // "rootDir": "./src",
    "target": "es5",
    "lib": ["DOM", "ES2020"],
    "jsx": "react", // preserve
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false, // можно включить когда ошибки будут экземплярами класса Error
    "exactOptionalPropertyTypes": false, // после включения strict
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "locale": "ru",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "noImplicitOverride": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["/node_modules/", "**/node_modules", "**/.*/"]
}

